					var searchOffset = $('#search-cat-page').offset().top;
					$(window).scroll(function(){
					   if ($(this).scrollTop() > searchOffset) {
							$(".site-header").addClass("search-active");
						} else {
							$(".site-header").removeClass("search-active");
						}
					});
