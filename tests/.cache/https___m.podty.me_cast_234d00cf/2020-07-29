        var podtyPlayer;

        $(document).ready(function() {
            podtyPlayer = new PodtyPlayer({
                playType: 'each',
                selectors: {
                    episodeList: '.episodeList',
                    play: '.miniPlayer [name="play"]',
                    backward: '.miniPlayer .controls .prev',
                    forward: '.miniPlayer .controls .next',
                    episodeName: '.miniPlayer .name .play_tit',
                    castName: '.miniPlayer .name .tit_dsc',
                    seekBar: '.miniPlayer .seek_area .seek_bar',
                    progressBar: '.miniPlayer .seek_bar .buffered-track',
                    progressThumb: '.miniPlayer .seek_bar .thumb',
                    currentTime: '.miniPlayer .seek_area .current',
                    remainTime: '.miniPlayer .seek_area .duration'
                }
            });

            // if player touch move prevent body scroll
            var preventBodyScroll = false;
            $(".miniPlayer").on('touchstart', function (e) {
                    preventBodyScroll = true;
            });

            $(".miniPlayer").on('touchmove', function (e) {
                if (preventBodyScroll)
                    e.preventDefault();
            });

            $(".miniPlayer").on('touchend', function () {
                preventBodyScroll = false;
            });
        }); // end of ready

        $(document).on('pjax:success', function() {
            podtyPlayer.syncCurrPlayingIcon();
        });
    </script>
	
