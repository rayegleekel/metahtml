                    //                            console.log(data);
                    //                            alert(data);
                    //                        });
                },
                success: function(res) {
                    alert('分享成功，感谢您的善举！');
                },
                cancel: function(res) {
                    //                  console.log(res);
                    //alert('aaaaaaaaaaaaa');
                    //alert('已取消');
                }

            });
