<script>
    $(document).ajaxSend(function(e, xhr, options) {
        var token = $("meta[name='_csrf']").attr("content");
        var header = $("meta[name='_csrf_header']").attr("content");
        xhr.setRequestHeader(header, token);
    });

    // 브라우져 체크
    podCast.util.checkBrowser();

    var pjax = new Pjax({
        elements: 'a[href]:not(.no-pjax), form[action]', 
        selectors: ['title', 'meta[name=description]', '#pjax-container'], 
        cacheBust: false,
        debug: false
    });

    (function setAppBanner() {
        var $appBanner = $('.bx_appbanner2');

        $.get(g_urlM + '/appbanner', function(data) {
            if (data.code != 0) {
                alert(data.detail);
                return;
            }

            if (!Object.keys(data.result).length)
                return;

            $appBanner.find('.app_tit').html(data.result.title);
            $appBanner.find('.tit_dsc').html(data.result.content);
            $appBanner.show();
        });
    })();

    $(document).ready(function() {
        fixFooter();

        if ($('.inner > .search_bx').find('input').val().length > 0)
            $(this).find('.btn_remove').css('visibility', 'visible');
    }); // end of ready

    function setViewMode() {
        $('.header > .inner .search_bx').hide().removeClass('on').find('.btn_remove').css('visibility', 'hidden');
        $('.dimmed').hide();
        $('#top_search').show();
        $('#inp_search').hide();
        $('#top_close').hide();
        $('.wrap').removeClass('view_search');
        $('.inp_area input.inp').val("");
        bodyScrollLock.clearAllBodyScrollLocks();
    }

    function setSearchMode() {
        $('.header > .inner .search_bx').show();
        $('#top_search').hide();
        $('#inp_search').show();
        $('#top_close').show();
        $('.inner input.inp').focus();
    }

    $('.inner input.inp').focus(function() {
        commonSearchMode();
        $('.search_bx').addClass('on');
        insertKeyword($(this).val());
    });

    function commonSearchMode() {
        $('.wrap').addClass('view_search');
        $('.dimmed').show();
        bodyScrollLock.disableBodyScroll($('.connect_bx')[0]);
    }

    $(document).on('click', function(e) {
        if(!$(e.target).hasClass("lst_itm") && $(e.target).parents(".bx_appbanner2").length == 0 && $(e.target).parents(".top_area").length == 0 && $(e.target).parents(".search_bx").length == 0) {
            $('.inner > .search_bx').removeClass('on')
        }
    });

    function insertKeyword(keyword) {

        if(keyword.length > 1){
            $.post("/search/suggest",
                    {"keyword" : keyword},
                    function(data){
                        if (data.length > 0) {
                            $(".connect_lst > li").remove();
                            var addli = '';

                            for (var i = 0; i < data.length && i < 10; i++) {
                                var value = data[i].toLowerCase();
                                var keywordIndex = value.indexOf(keyword.toLowerCase());
                                var line = data[i];

                                if (keywordIndex != -1) {
                                    line = value.slice(0, keywordIndex) + '<span class="txt_on">' + value.slice(keywordIndex, keywordIndex + keyword.length);
                                    line += '</span>' + value.slice(keywordIndex + keyword.length);
                                }
                                addli += '<li class="lst_itm"><a href="' + g_urlM + '/search/total?keyword=' + encodeURIComponent(podty.string.replaceQuotation(value)) + '">' + line + '</a></li>';
                            }

                            $(".connect_lst").append(addli);
                        }
                    });
        } else {
            $(".connect_lst > li").remove();
        }

        if(keyword.length > 0){
            $('#inp_remove').css('visibility', 'visible');
        } else {
            $('#inp_remove').css('visibility', 'hidden');
        }
    }

    function search() {
        var $input = $('.header > .inner > .search_bx input.inp');
        var keyword = $input.val();
        if (keyword.length > 1) {
            podty.pjax.go(g_urlM + '/search/total?keyword=' + encodeURIComponent(podty.string.replaceQuotation(keyword)));
            $input.blur();

            $.post(g_urlSecureBase + "/search/click/log",
                {
                    "searchType" : 'keyword',
                    "keyword" : keyword
                });
        } else {
            setTimeout(function () {
                podty.m.ui.alert("검색어는 최소 2글자 이상 입력해 주세요.");
            }, 100);
        }
    }

    $('.header .connect_lst').on('click', 'a', function(e) {
        e.preventDefault();
        $('.search_bx input.inp').val($(e.target)[0].innerText);
        search();
    });

    $(document).on('pjax:send', function(e) {
        // order: send > document ready > complete
        goToApp();
    });

    var $layerCategories = $('.ly_category');
    $(document).on('pjax:complete', function(e) {
        fixFooter();

        if ($(e.target)[0].URL.indexOf("/search") == -1) {
            $('#top_close').click();
            $layerCategories.hide();
        }
    });

    function clickCategory(e) {
        e.preventDefault();

        podty.pjax.go(e.target.href);
        $layerCategories.hide();
        $('body').css('visibility', 'visible');

        var categoryName = $(this).text();
        gaSendEvent('카테고리 선택 팝업 페이지 카테고리 선택', categoryName);
    }

    function closeCategory () {
        $('body').css('visibility', 'visible');
        $('#categoriesPopup').hide().css('visibility', 'hidden');
        bodyScrollLock.clearAllBodyScrollLocks();
    };

    function goToApp(path) {
        // 앱으로 보기 커스텀 스킴
        $('.wrap').off().on('click', '.bx_appbanner2 a', function (e) {
            e.preventDefault();
            podtyPlayer.stop();

            if (!path)
                path = '/main/home';

        });
    }

    // 모바일에서 pc버전 보기
    function changeViewMobileToPc() {
        var pcLink = podty.uri.changeMobileToPc(location.href);
        if (location.search.length > 0) {
            if (location.search.indexOf("view_ver=mobile") < 0) {
                pcLink += "&view_ver=mobile";
            }
        } else {
            pcLink += "?view_ver=mobile";
        }

        location.href = pcLink;
    }

    function fixFooter() {
        // add .little in footer when contents is smaller than device-height
        var bx_appbanner = $('.bx_appbanner2')[0];
        if (!bx_appbanner)
            return;

        var height = $(window).height() - bx_appbanner.clientHeight - $('.header')[0].clientHeight - $('.footer')[0].clientHeight - $('.miniPlayer')[0].clientHeight;

        if ($('main').height() < height) {
            $('.footer').addClass("little");
            $('#pjax-container').css("height", height);
        } else {
            $('.footer').removeClass("little");
            $('#pjax-container').removeAttr('style');
        }
    }
</script>

<script>
    if (!wcs_add) var wcs_add={};
    wcs_add["wa"] = "s_cde31afd58d";
    if (!_nasa) var _nasa={};
    wcs.inflow();
    wcs_do(_nasa);
</script>
</body>
</html>