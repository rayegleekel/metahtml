                gaSendEvent('새로운 에피소드 상세', '에피소드 명 클릭', eventLabel);
            });

            // ~ Search
            $header.find('.search_bx .btn_search').click(function() {
                var searchWord = $(this).siblings('.inp_area').find('.inp').val();
                if (searchWord)
                    gaSendEvent('검색 창', '검색 버튼', searchWord);
            });
            $header.find('.connect_bx').on('click', 'a', function() {
                var searchWord = $(this).text();
                if (searchWord)
                    gaSendEvent('검색 창', '자동완성', searchWord);
            });

            var $searchResult = $('#searchResult');
            var searchTabIdx;
            $.each($searchResult.find('.tab_area li'), function(i, li) {
                if ($(li).hasClass('on'))
                    searchTabIdx = i;

                if (i == 1) {
                    $(this).click(function() {
                        gaSendEvent('검색 결과 - 방송', '방송 탭 클릭');
                    });
                }
                else if (i == 2) {
                    $(this).click(function() {
                        gaSendEvent('검색 결과 - 에피소드', '에피소드 탭 클릭');
                    });
                }
            });

            var $searchResult1 = $searchResult.find('.group_item:eq(0)');
            $searchResult1.find('.cast_list .bx_img').click(function() {
                var eventCategory = '검색 결과 - ';
                var eventAction;

                if (searchTabIdx == 0) {
                    eventCategory += '통합';
                    eventAction = '방송 - 방송 이미지'
                } else if (searchTabIdx == 1) {
                    eventCategory += '방송';
                    eventAction = '방송 이미지'
                }

                var castName = $(this).closest('a').find('.tit').text();
                gaSendEvent(eventCategory, eventAction, castName);
            });
            $searchResult1.find('.episode_list .bx_img').click(function() {
                var eventAction;
                var $link = $(this);
                if ($link.hasClass('btn_play'))
                    eventAction = '일시정지';
                else if ($link.hasClass('btn_pause'))
                    eventAction = '재생';

                var eventLabel;
                var format = $link.closest('li').find('.bx_img').data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                var episodeName = $(this).closest('li').find('.tit').text();
                eventLabel += ' - ' + episodeName;

                gaSendEvent('검색 결과 - 에피소드', eventAction, eventLabel);
            });

            $searchResult1.find('.cast_list .tit').click(function() {
                var castName = $(this).text();
                gaSendEvent('검색 결과 - 통합', '방송 - 방송명', castName);
            });
            $searchResult1.find('.episode_list .bx_tit').click(function() {
                var castName = $(this).find('.tit_dsc').text();
                gaSendEvent('검색 결과 - 에피소드', '방송명', castName);
            });

            $searchResult1.find('.btn_link').click(function() {
                gaSendEvent('검색 결과 - 통합', '방송 - 전체보기');
            });

            var $searchResult2 = $searchResult.find('.group_item:eq(1)');
            if ($searchResult2.length) {
                $searchResult2.find('.episode_list .bx_img').click(function() {
                    var eventLabel;
                    var $link = $(this);
                    var format = $link.data('format');
                    if (format == 'mp3')
                        eventLabel = 'AOD';
                    else if (format == 'vod')
                        eventLabel = 'VOD';
                    else if (format == 'pdf')
                        eventLabel = 'PDF';

                    var eventAction = '에피소드 - ';
                    if ($link.hasClass('btn_play'))
                        eventAction += '일시정지';
                    else if ($link.hasClass('btn_pause'))
                        eventAction += '재생';

                    var episodeName = $link.closest('li').find('.item_info .tit').text();
                    eventLabel += ' - ' + episodeName;

                    gaSendEvent('검색 결과 - 통합', eventAction, eventLabel);
                });

                $searchResult2.find('.episode_list .tit').click(function() {
                    var episodeName = $(this).text();
                    gaSendEvent('검색 결과 - 통합', '에피소드 - 에피소드명', episodeName);
                });
                $searchResult2.find('.btn_link').click(function() {
                    gaSendEvent('검색 결과 - 통합', '에피소드 - 전체보기');
                });
            }

            // ~ Episode detail
            var $episodeDetail = $('#episodeDetail');
            $episodeDetail.find('[name="playBtn"]').click(function() {
                var eventCategory = '에피소드 상세 - ';

                var $button = $(this);
                var format = $episodeDetail.data('format');
                var type;
                if (format == 'mp3')
                    type = 'AOD';
                else if (format == 'vod')
                    type = 'VOD';
                else if (format == 'pdf')
                    type = 'PDF';

                eventCategory += type;

                var eventAction;
                if ($button.hasClass('btn_play'))
                    eventAction = '일시정지 버튼';
                else if ($button.hasClass('btn_vod'))
                    eventAction = 'VOD 버튼';
                else if ($button.hasClass('btn_pdf'))
                    eventAction = 'PDF 버튼';
                else if ($button.hasClass('btn_pause'))
                    eventAction = '재생버튼';

                var eventLabel = type + ' - ' + $button.data('episode-title');

                gaSendEvent(eventCategory, eventAction, eventLabel);
            });

            $episodeDetail.find('.btn_link').click(function() {
                var eventCategory = '에피소드 상세 - ';

                var $link = $(this);
                var format = $episodeDetail.data('format');
                var type;
                if (format == 'mp3')
                    type = 'AOD';
                else if (format == 'vod')
                    type = 'VOD';
                else if (format == 'pdf')
                    type = 'PDF';

                eventCategory += type;

                var castName = $link.text();

                gaSendEvent(eventCategory, '방송명 클릭', castName);
            });

            $episodeDetail.find('.btn_square').click(function() {
                var eventCategory = '에피소드 상세 - ';

                var $link = $(this);
                var format = $episodeDetail.data('format');
                var type;
                var eventLabel;
                if (format == 'mp3') {
                    type = 'AOD';
                    eventLabel = $link.text();
                }
                else if (format == 'vod') {
                    type = 'VOD';
                    eventLabel = $episodeDetail.find('> .episode_top .tit').text();
                }
                else if (format == 'pdf') {
                    type = 'PDF';
                    eventLabel = $episodeDetail.find('> .episode_top .tit').text();
                }

                eventCategory += type;

                gaSendEvent(eventCategory, '좋아요 버튼', eventLabel);
            });

            // ~ Cast detail
            var $castDetail = $('#castDetail');
            $castDetail.find('.btn_read').click(function() {
                var castName = $castDetail.find('.tit').text();
                gaSendEvent('방송 상세', '구독버튼', castName);
            });
            var $episodeList = $castDetail.find('.bx_episode .lst_item4');
            $episodeList.find('.tit_txt').click(function() {
                var episodeName = $(this).text();
                gaSendEvent('방송 상세', '에피소드 명', episodeName);
            });
            $episodeList.find('button').click(function() {
                var $button = $(this);
                var format = $button.data('format');

                var eventAction;
                if ($button.hasClass('btn_pause') || $button.hasClass('btn_pdf'))
                    eventAction = '재생';
                else
                    eventAction = '일시정지';

                var eventLabel;
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                eventLabel += ' - ' + $button.closest('li').find('.tit_txt').text();

                gaSendEvent('방송 상세', eventAction, eventLabel);
            });
		}, 300);
	});
