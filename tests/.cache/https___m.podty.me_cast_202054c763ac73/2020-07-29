<script>
    $(document).ready(function() {
        goToApp('/broadcast/detail?broadcast_id=202054');

        podtyPlayer.setPlayButtons(['.episodeList button'], 'castInfo');

        var $intro = $('.dsc_area');
        var pHeight = $intro.find('p')[0].offsetHeight;
        if (pHeight / parseInt($intro.find('p').css('line-height')) > 2) {
            $intro.removeClass("full_view");
        }

        $('.btn_read, .btn_sponsor').off().on('click', function(){
            podty.m.ui.confirm({
                msg: $(this).data('msg'),
                okLabel: "앱으로 열기",
                ok: function() {
                }
            });
        });

        $('.btn_all').off().on('click', function() {
            $intro.addClass('full_view');
            $('.dsc_txt').removeClass('long');
        });
    });
</script>

        <div id="categoriesPopup" class="ly_pop_wrap ly_category" style="display:none">
        </div>
<script>
	window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;

	gaSendEvent = function(eventCategory, eventAction, eventLabel) {

		eventCategory = eventCategory || "";
		eventAction = eventAction || "";
		eventLabel = eventLabel || "";

		if(eventCategory == "" || eventAction == ""){
			return;
		}

		if(eventLabel == "") {
			ga('send', 'event', {
				eventCategory : eventCategory,
				eventAction : eventAction
			});
		}else{
			ga('send', 'event', {
				eventCategory : eventCategory,
				eventAction : eventAction,
				eventLabel : eventLabel
			});
		}
	};

	$(document).ready(function() {
		setTimeout(function() {

			ga('create', 'UA-125890633-1', 'auto');
			// ~ 페이지뷰
			var page = location.pathname;

			if (page.length > 1 && page.substring(0, 2) == '/m')
			    page = page.substr(2);
			if (!page)
			    page = '/';

            var pageTitle;
			if (page == '/' || page == '/index')
				pageTitle = '메인 - 페이지';
			else if (page == '/intro')
				pageTitle = '메인 - 팟티 소개';
			else if (page == '/choice/list')
				pageTitle = '팟티초이스 상세';
			else if (page == '/chart/podty/daily')
				pageTitle = '팟티 차트 상세';
			else if (page == '/chart/daily')
				pageTitle = '카테고리 차트 상세';
			else if (page == '/new/episodes')
				pageTitle = '새로운 에피소드 상세';
			else if (page == '/new/episodes')
				pageTitle = '새로운 에피소드 상세';
			else if (page == '/search/total')
				pageTitle = '검색 결과 - 통합';
			else if (page == '/search/cast')
				pageTitle = '검색 결과 - 방송';
			else if (page == '/search/episode')
				pageTitle = '검색 결과 - 에피소드';
            else if (/\/episode\/\d+$/.test(page))
                pageTitle = '에피소드 페이지';
            else if (/\/cast\/\d+$/.test(page))
                pageTitle = '방송 상세';
            else if (page == '/popup/kbs/2019')
                pageTitle = '이벤트 페이지 - 팝업 - KBS 2019';
            else if (page == '/popup/kbs/2019/detail')
                pageTitle = '이벤트 페이지 - 상세 - KBS 2019 - 모바일 웹';

            if (pageTitle)
				ga('send', 'pageview', pageTitle);
			else
                ga('send', 'pageview');

            var $container = $('body > .wrap');
            var $header = $container.find('> .header');
            $header.find('.logo').off('click').on('click', function() {
                gaSendEvent('헤더', 'BI 버튼');
            });
            $header.find('.top_area .btn_search').off('click').on('click', function() {
                gaSendEvent('헤더', '검색 버튼');
            });

            var $appBanner = $container.find('> .bx_appbanner2');
            $appBanner.find('.btn_link').off('click').on('click', function() {
                gaSendEvent('앱 설치 유도 배너 ', '앱으로 보기');
            });

            var $footer = $container.find('> .footer');
            $footer.find('.lst_link a:eq(0)').off('click').on('click', function() {
                gaSendEvent('footer', '회사소개');
            });
            $footer.find('.lst_link a:eq(1)').off('click').on('click', function() {
                gaSendEvent('footer', '이용약관');
            });
            $footer.find('.lst_link a:eq(2)').off('click').on('click', function() {
                gaSendEvent('footer', '개인정보취급방침');
            });
            $footer.find('.btn_link').off('click').on('click', function() {
                gaSendEvent('footer', 'PC버전');
            });

            // ~ Home
            $container = $('#pjax-container > main');
            var $podtyChoice = $container.find('.podty_choice');
            $podtyChoice.find('> .lst_item .bx_img').on('click', function() {
                var $link = $(this);
                var eventLabel;
                var format = $link.data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                var eventAction;
                if ($link.hasClass('btn_pause') || $link.hasClass('btn_vod') || $link.hasClass('btn_pdf'))
                    eventAction = '재생';
                else
                    eventAction = '일시정지';

                eventLabel += ' - ' + $link.siblings('a').find('.txt').text();
                gaSendEvent('홈-팟티 초이스', eventAction, eventLabel);
            });
            $podtyChoice.find('> .lst_item .item_tit').on('click', function() {
                var eventLabel;
                var $link = $(this);
                var format = $link.closest('li').data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                eventLabel += ' - ' + $.trim($link.text());

                gaSendEvent('홈-팟티 초이스', '에피소드 명 클릭 - 에피소드 명', eventLabel);
            });
            $podtyChoice.find('> .bx_btn .btn_link').on('click', function() {
                gaSendEvent('홈-팟티 초이스', '전체보기');
            });

            var $podtyChart = $container.find('.bx_chart:eq(0)');
            $podtyChart.find('> .tit_info a').click(function() {
                gaSendEvent('홈-팟티 차트', '전체보기');
            });
            $podtyChart.find('> .lst_item2 a .bx_dummy').click(function() {
                var castName = $(this).siblings('.item_info').find('.tit').text();
                gaSendEvent('홈-팟티 차트', '방송 이미지 - 방송명', castName);
            });
            $podtyChart.find('> .lst_item2 a .item_info').click(function() {
                var castName = $(this).find('.tit').text();
                gaSendEvent('홈-팟티 차트', '방송 이름 - 방송명', castName);
            });

            var $majorCategoryChart = $container.find('.bx_chart:eq(1)');
            $majorCategoryChart.find('> .tit_info a').click(function() {
                var categoryName = $(this).siblings('.tit_txt').text();
                gaSendEvent('홈-카테고리', '큰 카테고리 차트 전체보기', categoryName);
            });
            $majorCategoryChart.find('.group_lst_item a').click(function() {
                var castName = $(this).find('.tit').text();
                gaSendEvent('홈-카테고리', '큰 카테고리 차트 방송 리스트 - 방송명', castName);
            });

            var $minorCategoryChart = $container.find('.bx_category');
            $minorCategoryChart.find('> .lst_category a').click(function() {
                var categoryName = $(this).text();
                gaSendEvent('홈-카테고리', '카테고리 선택 - 카테고리명', categoryName);
            });
            $minorCategoryChart.find('> .bx_btn a').click(function() {
                gaSendEvent('홈-카테고리', '카테고리 전체보기');
            });

            var $newEpisodes = $container.find('.bx_episode');
            $newEpisodes.find('> .tit_info a').click(function() {
                gaSendEvent('홈-새로운 에피소드', '전체보기');
            });
            $newEpisodes.find('> .lst_item3 .bx_img').click(function() {
                var eventAction;
                var $link = $(this);
                if ($link.hasClass('btn_pause') || $link.hasClass('btn_vod') || $link.hasClass('btn_pdf'))
                    eventAction = '재생 - ';
                else
                    eventAction = '일시정지 - ';

                eventAction += '타입 - 에피소드명';

                var type;
                var format = $link.data('format');
                if (format == 'mp3')
                    type = 'AOD';
                else if (format == 'vod')
                    type = 'VOD';
                else if (format == 'pdf')
                    type = 'PDF';

                var episodeName = $link.closest('li').find('.tit').text();
                var eventLabel = type + ' - ' + episodeName;

                gaSendEvent('홈-새로운 에피소드', eventAction, eventLabel);
            });

            $newEpisodes.find('> .lst_item3 .bx_tit').click(function() {
                var type;
                var format = $(this).closest('li').find('.bx_img').data('format');
                if (format == 'mp3')
                    type = 'AOD';
                else if (format == 'vod')
                    type = 'VOD';
                else if (format == 'pdf')
                    type = 'PDF';

                var episodeName = $(this).find('.tit').text();
                var eventLabel = type + ' - ' + episodeName;

                gaSendEvent('홈-새로운 에피소드', '에피소드명 클릭 - 에피소드명', eventLabel);
            });

            $newEpisodes.find('.area_banner .bx_banner').click(function() {
                var type;
                var format = $(this).data('format');
                if (format == 'mp3')
                    type = 'AOD';
                else if (format == 'vod')
                    type = 'VOD';
                else if (format == 'pdf')
                    type = 'PDF';

                var episodeName = $(this).find('.tit').text();
                var eventLabel = type + ' - ' + episodeName;

                gaSendEvent('홈-새로운 에피소드 초이스', '에피소드명 클릭', eventLabel);
            });
            $newEpisodes.find('.area_banner button').click(function() {
                var eventAction;
                var $button = $(this);
                if ($button.hasClass('btn_pause') || $button.hasClass('btn_vod') || $button.hasClass('btn_pdf'))
                    eventAction = '재생';
                else
                    eventAction = '일시정지';

                var type;
                var format = $(this).data('format');
                if (format == 'mp3')
                    type = 'AOD';
                else if (format == 'vod')
                    type = 'VOD';
                else if (format == 'pdf')
                    type = 'PDF';

                var episodeName = $button.siblings('.bx_banner').find('.tit').text();
                var eventLabel = type + ' - ' + episodeName;

                gaSendEvent('홈-새로운 에피소드 초이스', eventAction, eventLabel);
            });

            // ~ Podty choice
            var $podtyChoice = $('#podtyChoice');
            $podtyChoice.find('.lst_item3 .bx_img').click(function() {
                var eventLabel;
                var $link = $(this);
                var format = $link.data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                var eventAction;
                if ($link.hasClass('btn_pause') || $link.hasClass('btn_vod') || $link.hasClass('btn_pdf'))
                    eventAction = '재생';
                else
                    eventAction = '일시정지';

                var episodeName = $link.closest('li').find('.item_info .tit').text();
                eventLabel += ' - ' + episodeName;

                gaSendEvent('팟티초이스', eventAction, eventLabel);
            });
            $podtyChoice.find('.lst_item3 .bx_tit').click(function() {
                var eventLabel;
                var $link = $(this);
                var format = $link.closest('li').find('.bx_img').data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                var episodeName = $link.closest('li').find('.item_info .tit').text();
                eventLabel += ' - ' + episodeName;

                gaSendEvent('팟티초이스', '에피소드 명 클릭', eventLabel);
            });

            // ~ Podty chart
            var $podtyChart = $('#podtyChart');
            $podtyChart.find('.lst_item5 .bx_img').click(function() {
                var castName = $(this).closest('a').find('.tit').text();
                gaSendEvent('팟티 차트 상세', '방송 이미지', castName);
            });
            $podtyChart.find('.lst_item5 .tit').click(function() {
                var castName = $(this).text();
                gaSendEvent('팟티 차트 상세', '방송명', castName);
            });

            // ~ Category chart
            var $categoryChart = $('#categoryChart');
            $categoryChart.find('.btn_link').click(function() {
                gaSendEvent('카테고리 선택 버튼');
            });
            $categoryChart.find('.lst_item5 .bx_img').click(function() {
                var castName = $(this).closest('a').find('.tit').text();
                gaSendEvent('카테고리', '방송 이미지', castName);
            });
            $categoryChart.find('.lst_item5 .tit').click(function() {
                var castName = $(this).text();
                gaSendEvent('카테고리', '방송명', castName);
            });

            // ~ New episodes
            var $newEpisodes = $('#newEpisodes');
            $newEpisodes.find('.lst_item3 .bx_img').click(function() {
                var eventLabel;
                var $link = $(this);
                var format = $link.closest('div').data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

                var eventAction;
                if ($link.hasClass('btn_pause') || $link.hasClass('btn_vod') || $link.hasClass('btn_pdf'))
                    eventAction = '재생';
                else
                    eventAction = '일시정지';

                var episodeName = $link.closest('li').find('.item_info .tit').text();
                eventLabel += ' - ' + episodeName;

                gaSendEvent('새로운 에피소드 상세', eventAction, eventLabel);
            });
            $newEpisodes.find('.lst_item3 .bx_tit').click(function() {
                var eventLabel;
                var $link = $(this);
                var format = $link.closest('li').find('.episodeList').data('format');
                if (format == 'mp3')
                    eventLabel = 'AOD';
                else if (format == 'vod')
                    eventLabel = 'VOD';
                else if (format == 'pdf')
                    eventLabel = 'PDF';

