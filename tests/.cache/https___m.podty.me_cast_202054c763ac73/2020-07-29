<script>
var currPage = 1;
var lastPage = 1;
$(document).ready(function(){	
	$('.bx_episode .btn_more').off().on('click', function(e) {
        var $more = $(this);
        $.get('https://m.podty.me/cast/202054/episode/more?page='+(++currPage), function(html) {
            $(".lst_item4.episode_list").append(html);
            if(lastPage == currPage)
                $more.hide();

            podtyPlayer.setPlayButtons(['.episodeList button'], 'castInfo');
            podtyPlayer.syncCurrPlayingIcon();
        });
    });
});
</script>

