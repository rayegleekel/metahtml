        $('.open').click(function () {
            $(this).toggleClass('cur').siblings('ul').slideToggle();
        });
        // tab切换
        $('.tab_t_item').click(function () {
            var index = $(this).index();
            $(this).addClass('cur').siblings().removeClass('cur').parent().siblings('.tab_b').children('.tab_b_inner').eq(index).show().siblings().hide();
        })
