<script>
    function createOrderToBuy() {
         if(""==""){
            layer.confirm('请登录后进行购买。', {
                btn: ['确定']
            }, function (index) {
                layer.close(index);
                fastLogin();
            });
            return false;
         } else {
             var pid = $("#cproID").val();
             if (pid == "" || pid == undefined) {
                 layer.alert("获取商品信息有误，暂不能购买");
                 return false;
             } else {
                 window.location.href = "/Paycenter/D_CreateOrderNOshopC?pId=" + pid;
             }
         }

    };
