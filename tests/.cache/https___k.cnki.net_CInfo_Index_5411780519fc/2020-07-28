                layer.close(index);
                if(f==1){
                    fastLogin("/Paycenter/Buy/5411?ReturnUrl=" + url + "&pId=" + pid);
                }else{
                    fastLogin();
                }

            })
            return false;
        }
        window.location.href = "/Paycenter/Buy/5411?ReturnUrl=" + url + "&pId=" + pid;

    }
