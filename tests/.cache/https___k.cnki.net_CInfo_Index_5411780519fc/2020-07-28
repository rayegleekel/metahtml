        //展示购买组合列表
        if ("0"!="1" && "False"=="True") {
             $.post("/CInfo/GetShopCom", { cid: "5411" }, function (result) {
                if (!result.r && result.r != undefined) {
                    $(".combination_shopping").css("display","none");
                } else {
                    $(".layer_shopping").html(result);
                    $(".combination_shopping").css("display", "");
                }
             });
