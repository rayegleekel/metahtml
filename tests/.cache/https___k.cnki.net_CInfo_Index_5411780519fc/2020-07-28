<script>
    $(".b").click(function () {
            $(".im-div").toggle("slow");
        })

        $("#zxContent").keyup(function () {
            var maxChars = 50; //
            if (this.value.trim().length > maxChars) {
                layer.alert("最多输入50字。");
                this.value = this.value.substring(0, maxChars);
                return false;
            }
        })
        $("#btn-zx").click(function () {
            $(this).attr("disabled",true);
            if ("" != "") {
                var content = $("#zxContent").val();
                if (content.trim().length <1) {
                    layer.alert("咨询内容不能为空！");
                    $(this).attr("disabled",false);
                    return false;
                }
                if("0"=="113606"){
                    layer.alert("不允许咨询自己！");
                    $(this).attr("disabled",false);
                    return false;
                }
                var un= $("#hid_un").val();
                $.post("/CInfo/GoConsult", {cid:5411,content:content,replyid:un},function(res){
                    if(res=="Success"){
                        layer.confirm("您的咨询信息已提交！",{btn:["确定"]},function(index){
                            $("#zxContent").val("");
                            $(".b").click();
                            layer.close(index);
                        });
                    }
                    else {
                        layer.alert("提交失败！");
                        $("#zxContent").val("");
                        $(this).attr("disabled",false);
                        return false;
                    }
                })
            }
            else {
                layer.confirm('请先登录。', {
                    btn: ['确定']
                }, function (index) {
                    layer.close(index);
                    fastLogin();
                });
                return false;
            }
        })

    function changeUrl(param, pvalue) {
        var url = window.location.href;
        if (param != "") {
            url = setURLParam(url, param, pvalue);
        }
        window.location.href = url;
    }
