<script>
       var Grade = 5;

       if(Grade!=0){
           $(".recommend_teacher_star svg").eq(Grade - 1).prevAll().removeClass("stared").addClass("stared");}
       function followUser(sk) {
           var isLogin = "False";
           if (isLogin == "False") {
               layer.confirm('请登录后进行关注。', {
                   btn: ['确定']
               }, function (index) {
                   layer.close(index);
                   fastLogin();
               });
               return false;
           } else if ('0' == '113606') {
               layer.alert("不能关注自己");
               return false;
           }
           var param = {
               uName: "113606",
               sk: sk,
               date: new Date().getTime()
           };
           $.ajax({
               type: 'POST',
               cache: false,
               url: "/Room/Home/Follow",
               data: param,
               async: false,
               error: function (errorResult) {
                   layer.alert("获取数据失败，请刷新重试。");
               },
               success: function () {
                   $("#btn_follow").remove();
                   $(".recommend_teacher_rt").append("<button>已关注</button >");
               }
           });
    }

    $("#tab_t_talk").on("click", function () {
        if ($.trim($("#divTalk").html()) == "") {
            $("#divTalk").load("/CInfo/GetTalk?cid=5411&crea=" +113606);
        }
    });
    $("#tab_t_comment").on("click", function () {
        if ($.trim($("#divComment").html()) == "") {
            $("#divComment").load("/CInfo/GetComment?cid=5411");
        }
    })
</script>
