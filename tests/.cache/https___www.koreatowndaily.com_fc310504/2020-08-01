    });

    $('.btn-close-today a').click(function(e){
        e.preventDefault();
        $('#fp-banner-wrapper').hide();
        var today = (new Date()).getDate();
        setCookie('worldcup', today, 1);
    });

    function setCookie(cname, cvalue, exdays) {
        var d = new Date();
        d.setTime(d.getTime() + (exdays*24*60*60*1000));
        var expires = "expires="+ d.toUTCString();
        document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
    }

    function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');
        for(var i = 0; i <ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }
    // end of russia worldcup banner control

    $('.banner').hide();

    //entertainment carousel
    $('#index-enter .slides').slick({
        slidesToShow: 1,
        dots: true,
        arrows: true,
        autoplay: true,
        mobileFirst: true,
        responsive: [
            {
                breakpoint: 599,
                settings: {
                    slidesToShow: 2
                }
            },
            {
                breakpoint: 991,
                settings: {
                    slidesToShow: 3
                }
            },
        ]
    });

    $('#index-gallery .slider-for').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: false,
        fade: true,
        asNavFor: '.slider-nav',
        mobileFirst: true,
        responsive: [
            {
                breakpoint: 600,
                settings: {
                    slidesToShow: 2,
                    asNavFor: null,
                    fade: false,
                    dots: true,
                }
            },
            {
                breakpoint: 991,
                settings: {
                    slidesToShow: 1,
                }
            }
        ]
    });

    $('#index-gallery .slider-nav').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        asNavFor: '#index-gallery .slider-for',
        dots: true,
        centerMode: true,
        focusOnSelect: true,
        autoplay: true
    });

    $('.home-town-business')
        .on('mouseover', function(e) {
         $(this).children('figcaption').show();
        })
        .on('mouseout', function(e) {
            $(this).children('figcaption').hide();
        })
        .on('click', function(e){
            window.location.href = $(this).attr('data-url');
        });
});
</script>

    <script>

        /** Weather API **/
        $.getJSON('https://www.koreatowndaily.com/weatherForecast', function(data){
            var cw = data[0];

            var currentWeather =
            '<div class="pull-left"><span class="weather-icon"><img src="' + cw.icon + '"></span></div>' +
            '<div class="pull-left"><span class="weather-temp-now">' + cw.temperature.now + '<sup>&deg;F</sup></span><br/>' +
            '<span class="weather-temp-min">' + cw.temperature.min + '&deg; | </span>' +
            '<span class="weather-temp-max">' + cw.temperature.max + '&deg;</span></div><div class="clearfix"></div>' +
            '<div class="weather-city">' + 'Los Angeles' + '</div>';

            $('.weather .weather-current').html(currentWeather);
            $('header .mo-temp-data').html(cw.temperature.now + '<sup>&deg;F</sup>');
        });

        /* banner scroll */
        $(window).on('scroll', function(e){
            var top = $(window).scrollTop();

            if (top > 170) {
                // adjust banner top position
                $('.side-banner-left').css('top', top + 'px');
                $('.side-banner-right').css('top', top + 'px');
            } else {
                $('.side-banner-left').css('top', '170px');
                $('.side-banner-right').css('top', '170px');
            }
        });

    </script>

    <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
