<script>
;(function($){
	$("#submit").click(function(){ 
		var id = 17175;
        var email = $("#emailcomment").val();
		var author = $("#author").val();
        var comment = $("#comment").val();
        var grecaptcha = $("#g-recaptcha-response").val();
		//alert(grecaptcha);
		var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
		if( email == "" || author == "" ) {
			alert(email);
			alert(author);
		  $('#errorrequired').show();
		}
		else if (!emailReg.test(email)){
		  $('#errorremail').show();
		}
		else{
			$('#errorrequired').hide();
			$('#errorremail').hide();
			var link = "https://www.greatsciences.com/articles/commentadd/";
			$.get(link+id+'/'+author+'/'+email+'/'+comment+'/'+grecaptcha, function(d) {
				$("#newcomment").html(d);
			});
		}
	});
})(jQuery);
</script>		<aside id="secondary" class="widget-area" role="complementary">

